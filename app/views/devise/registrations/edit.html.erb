<div class="container">
  <div class="wrapper col-md-4 col-md-offset-4 col-sm-10">
    <h2>パスワードを再設定する</h2>
    
    <%= alert %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
    
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true , class: "form-control" %>
      </div>
      
      <div class="field">
        <%= f.label :name %><br />
        <%= f.email_field :name, autofocus: true , class: "form-control" %>
      </div>
      
      <% if @user.provider.blank? %>
    
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
    
        <div class="field">
          <%= f.label :password %><br><i>(変更しない場合は空白にしてください)</i>
          <% if @minimum_password_length %>
            <em>※最低<%= @minimum_password_length %> 文字以上</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "off" , autofocus: true, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", autofocus: true, class: "form-control" %>
        </div>
    
        <div class="field">
          <%= f.label :current_password %> <br />
          <%= f.password_field :current_password, autocomplete: "off", autofocus: true, class: "form-control" %>
        </div>
      
      <% end %>
      
    <div class="field">
        <%= profile_img(@user) if profile_img(@user) %>
        <%= f.file_field :avatar %>
        <%= f.hidden_field :avatar_cache %>
      </div>

      <div class="actions">
        <%= f.submit "更新する", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
    <br>
    <h2>アカウント削除</h2>
    
    <p><%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , class: "btn btn-danger" %></p>
    
    <%= link_to "戻る", :back %>
  </div>
</div>